{
  "name": "@prmichaelsen/remember-core",
  "version": "0.16.1",
  "description": "Core SDK for Remember â€” transport-agnostic business logic for memory services",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    },
    "./services": {
      "types": "./dist/services/index.d.ts",
      "import": "./dist/services/index.js"
    },
    "./collections": {
      "types": "./dist/collections/index.d.ts",
      "import": "./dist/collections/index.js"
    },
    "./constants": {
      "types": "./dist/constants/index.d.ts",
      "import": "./dist/constants/index.js"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "import": "./dist/config/index.js"
    },
    "./database/weaviate": {
      "types": "./dist/database/weaviate/index.d.ts",
      "import": "./dist/database/weaviate/index.js"
    },
    "./database/firestore": {
      "types": "./dist/database/firestore/index.d.ts",
      "import": "./dist/database/firestore/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    },
    "./errors": {
      "types": "./dist/errors/index.d.ts",
      "import": "./dist/errors/index.js"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "import": "./dist/testing/index.js"
    },
    "./app": {
      "types": "./dist/app/index.d.ts",
      "import": "./dist/app/index.js"
    },
    "./clients/svc/v1": {
      "types": "./dist/clients/svc/v1/index.d.ts",
      "import": "./dist/clients/svc/v1/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "types": [
        "dist/types/index.d.ts"
      ],
      "services": [
        "dist/services/index.d.ts"
      ],
      "collections": [
        "dist/collections/index.d.ts"
      ],
      "constants": [
        "dist/constants/index.d.ts"
      ],
      "config": [
        "dist/config/index.d.ts"
      ],
      "database/weaviate": [
        "dist/database/weaviate/index.d.ts"
      ],
      "database/firestore": [
        "dist/database/firestore/index.d.ts"
      ],
      "utils": [
        "dist/utils/index.d.ts"
      ],
      "errors": [
        "dist/errors/index.d.ts"
      ],
      "testing": [
        "dist/testing/index.d.ts"
      ],
      "app": [
        "dist/app/index.d.ts"
      ],
      "clients/svc/v1": [
        "dist/clients/svc/v1/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "test": "jest --config config/jest.config.js",
    "test:coverage": "jest --config config/jest.config.js --coverage",
    "test:e2e": "jest --config config/jest.e2e.config.js --runInBand",
    "generate:types:svc": "openapi-typescript docs/openapi.yaml -o src/clients/svc/v1/types.generated.ts",
    "generate:types:app": "openapi-typescript docs/openapi-web.yaml -o src/app/types.generated.ts",
    "generate:types": "npm run generate:types:svc && npm run generate:types:app",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "keywords": [
    "remember",
    "memory",
    "core-sdk",
    "weaviate",
    "mcp"
  ],
  "author": "prmichaelsen",
  "license": "MIT",
  "dependencies": {
    "@prmichaelsen/firebase-admin-sdk-v8": "^2.5.1",
    "weaviate-client": "^3.11.0"
  },
  "peerDependencies": {
    "jsonwebtoken": "^9.0.0"
  },
  "peerDependenciesMeta": {
    "jsonwebtoken": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.19.13",
    "@types/uuid": "^10.0.0",
    "jest": "^30.2.0",
    "openapi-typescript": "^7.13.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}
